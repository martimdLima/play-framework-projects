# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Default path will just redirect to the issue list
GET     /                           controllers.HomeController.index()

# Computers list (look at the default values for pagination parameters)
GET     /issues                  controllers.HomeController.list(request: Request, p:Int ?= 0, s ?= "name", o ?= "asc", f ?= "")

# Add issue
GET     /issues/new              controllers.HomeController.create(request: Request)
POST    /issues                  controllers.HomeController.save(request: Request)

# Edit existing issue--
GET     /issues/:id              controllers.HomeController.edit(request: Request, id:Long)
POST    /issues/:id              controllers.HomeController.update(request: Request, id:Long)

# Delete a issue
POST    /issues/:id/delete       controllers.HomeController.delete(id:Long)


# list users
GET     /users                 controllers.HomeController.listUsers(request: Request, p:Int ?= 0, s ?= "name", o ?= "asc", f ?= "")

# Add user
GET     /users/new              controllers.HomeController.userSignup(request: Request)
POST    /users                  controllers.HomeController.saveUser(request: Request)

# Edit existing user--
GET     /users/:id              controllers.HomeController.editUser(request: Request, id:Long)
POST    /users/:id              controllers.HomeController.updateUser(request: Request, id:Long)

# Delete a user
POST    /users/:id/delete       controllers.HomeController.deleteUser(id:Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

