# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                         controllers.UserController.index(req: Request)
POST    /user                     controllers.UserController.addUser(req: Request)
GET     /users                    controllers.UserController.getUsers()

GET     /                          controllers.IssueController.index(req: Request)
POST    /issue                     controllers.IssueController.addIssue(req: Request)
GET     /issues                    controllers.IssueController.getIssues()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
