# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index(request: Request)

# Issues
GET     /issueList                             controllers.IssueController.listIssues(request: Request)
GET     /issueList/:id                             controllers.IssueController.detailIssue(id: Long, request: Request)
GET    /issue                                  controllers.IssueController.createView(request: Request)
GET    /issue/new                                  controllers.IssueController.create(request: Request)

# Users
GET     /users                             controllers.UserController.listUsers(request: Request)
GET     /users/:id                             controllers.UserController.detailUser(id: Long, request: Request)
GET    /user                                  controllers.UserController.createView(request: Request)
GET    /user/new                                  controllers.UserController.create(request: Request)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
