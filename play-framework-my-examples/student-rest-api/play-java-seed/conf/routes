# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#GET     /                           controllers.StudentController.listStudents()
#GET     /student/:id                        controllers.StudentController.retrieve(id:Int)
#POST    /student                           controllers.StudentController.create(request: Request)
#PUT     /student                           controllers.StudentController.update(request: Request)
#DELETE  /student/:id                        controllers.StudentController.delete(id:Int)


GET     /                           controllers.UserController.listUsers()
GET     /users                           controllers.UserController.listUsers()
GET     /user/:id                        controllers.UserController.retrieveUser(id:Int)
POST    /user                           controllers.UserController.createUser(request: Request)
PUT     /user                           controllers.UserController.updateUser(request: Request)
DELETE  /user/:id                        controllers.UserController.deleteUser(id:Int)

GET     /issues                           controllers.IssueController.listIssues()
GET     /issue/:id                        controllers.IssueController.retrieveIssue(id:Int)
POST    /issue                           controllers.IssueController.createIssue(request: Request)
PUT     /issue                           controllers.IssueController.updateIssue(request: Request)
DELETE  /issue/:id                        controllers.IssueController.deleteIssue(id:Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)