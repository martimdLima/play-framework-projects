# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                                   controllers.HomeController.index()

#User Controller
GET     /users                              controllers.UserController.getUsers(request: Request)
POST    /users                              controllers.UserController.createUser(request: Request)
PUT     /users                              controllers.UserController.updateUser(request: Request)
GET     /users/:userId                      controllers.UserController.getUserById(request: Request, userId: String)
DELETE  /users/:userId                      controllers.UserController.deleteUserById(request: Request, userId: String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)